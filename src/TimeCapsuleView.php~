class TimeCapsuleView {

    protected $timecapsule;

    function __construct() {

        $timecapsule = new TimeCapsuleModel();
        
        $timecapsule.name($_REQUEST["name"]);
        $timecapsule.phone($_REQUEST["phone"]);
        $timecapsule.email($_REQUEST["email"]);
        $timecapsule.date($_REQUEST["date"]);
        $timecapsule.message($_REQUEST["message"]);
        
        $timecapsule.gravar();        
    }

}

?>
