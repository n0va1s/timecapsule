class TimeCapsuleModel {
    protected $name;
    protected $phone;
    protected $email;
    protected $date;
    protected $message;
    
    protected $error;
    
    public function setName($name) {

        if (!isset($name)) {
        
            $error.setMessage("Informe o nome");
        } 
        
        if (len($name) < 5) {

            $error.setMessage("O nome precisa ter ao menos 5 letras");
        }
        
        $name = upper($name);
    }
    
    public function setPhone($phone) {

        if (!isset($phone)) {
        
            $error.setMessage("Informe o telefone");
        }
        
        if (len($phone) < 10) {

            $error.setMessage("O telefone precisa ter ao menos 10 números");
        }
        
        $phone = strreplace($phone, "-", null);
    }
    
    public function setEmail($email) {

        if ($email == "") {
        
            $error.setMessage("Informe o email");
        }
        
        if (instr($email, "@")) {

            $error.setMessage("O email não é válido");
        }
        
        $email = upper($email);
    }
    
    public function setDate($date) {

        if ($date == "") {
        
            $error.setMessage("Informe a data do envio");
        }
        
        if (len($date) < 10) {

            $error.setMessage("A data precisa ter ao menos 8 números");
        }
        
        $date = strreplace($date, "/", null);
    }
    
    public function setMessage($message) {

        $message = isset($message) ? $message : "";
    }
    
    public function gravar($this) {
    
        $TimeCapsuleDAO.inserir($this);    
    
    }
}

?>
