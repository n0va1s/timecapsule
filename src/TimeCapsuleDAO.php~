class TimeCapsuleDAO {

    static function inserir(TimeCapsuleModel $timecapsule) {
    	
        $conn = Conexao::conectar();
        $sql = $conn->prepare("insert into message (nam_message,
                                                    dat_message,
                                                    eml_message,
                                                    tel_message)
                                         values (?,?,?,?)");
                                         
        $result = $sql->execute($timecapsule->getName(),
                                $timecapsule->getDate(),
                                $timecapsule->getEmail(),
                                $timecapsule->getMessage()));
                      
        Conexao::desconectar();
        return $result;
    }
}

?>
